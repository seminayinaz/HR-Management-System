@model HRManagement.Models.Department

@{
    ViewData["Title"] = "FindDepartment";
    Layout = "~/Views/Shared/_Test.cshtml";
}

<br />
@using (Html.BeginForm("UpdateDepartment", "department" , FormMethod.Post))
{
    <b>Departman ID</b>
    @Html.TextBoxFor(x => x.department_id, new { @class = "form-control" })
    <br />
    <b>Departman Adı</b>
    @Html.TextBoxFor(x => x.department_name, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:gainsboro"><b>Departman Güncelle</b></button>
}

